{
    "manifest_version": 2,
    "name": "Sweetcake",
    "description": "This extension testes Google extension",
    "version": "1.0",

    "browser_action": {
      "default_icon": "icon.png",
      "default_popup": "popup.html"
    },
    "background" : {
      "scripts": [ "jquery.min.js", "background.js" ],
      "persistent": false
    },
    "permissions": [
      "background",
      "activeTab",
      "tabs",
      "*://*/*"
    ]
}
