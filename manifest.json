{
    "manifest_version": 2,
    "name": "Sweetcake",
    "description": "Faceseo - Chrome extension © Copyright 2013 Giải Pháp Thương Hiệu",
    "version": "1.0",
    "icons": {
      "16": "icon16.png",
      "48": "icon48.png",
      "128": "icon128.png"
    },
    "browser_action": {
      "default_icon": "icon.png",
      "default_popup": "popup.html"
    },
    "background" : {
      "scripts": [ "jquery.min.js", "background.js" ],
      "persistent": true
    },
    "permissions": [
      "background",
      "activeTab",
      "tabs",
      "cookies",
      "*://*/*"
    ]
}
